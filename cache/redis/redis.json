{
  // [ cluster / singleton ] 集群模式 / 主从模式(只配置一个IP与端口时可当作单个实例)
  "mode": "cluster",
  // 设置redis的ip，如果是主从模式设置一个就好
  "hosts": [
    "192.168.3.111",
    "192.168.3.112",
    "192.168.3.113"
  ],
  // 对应的端口
  "ports": [
    7001,
    7001,
    7001
  ],
  "pwd": "",
   // 最大空闲连接数，即会有这么多个连接提前等待着，但过了超时时间也会关闭
  "maxIdle": 48,
   //最大连接数，即最多的tcp连接数，一般建议往大的配置，但不要超过操作系统文件句柄个数（centos下可以ulimit -n查看）
  "maxActive": 1024,
   //空闲连接超时时间，但应该设置比redis服务器超时时间短。否则服务端超时了，客户端保持着连接也没用，单位秒
  "idleTimeout": 30
}